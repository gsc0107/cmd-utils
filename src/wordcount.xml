<cmd name="WordCount">


<options>
	<option name="ignorecase" opt="i" longopt="ignorecase" type="bool">
		<description>Ignore case</description>
	</option>
	<option name="delimiter" opt="d" longopt="delimiter" type="char" default="\t">
		<description>output delimiter</description>
	</option>
	<option name="histogram" opt="g" longopt="histogram" type="bool">
		<description>print an histogram</description>
    </option>
    <option name="histwidth" opt="w" longopt="histogramwidth" type="int" default="20">
		<description>histogram width</description>
    </option>
     <option name="uniqc" opt="u" longopt="uniq" type="bool">
		<description>input is the outpout of uniq -c</description>
    </option>
</options>


</cmd>
